<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".PlayerActivity">

    <ImageView
        android:id="@+id/player_song_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        tools:src="@drawable/thebox"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp">
    </ImageView>

    <TextView
        android:id="@+id/player_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="The Box"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:textColor="#ec407a">
    </TextView>

    <TextView
        android:id="@+id/player_song_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Roddy Rich"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_margin="5dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/repeat_default">
        </ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/shuffle">
        </ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/current_list">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp">
<TextView
    android:text="00:00"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    />

    <SeekBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        >

    </SeekBar>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5:00"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_skip_previous_black_24dp"></ImageView>

        <ImageView
            android:id="@+id/play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_play_arrow_black_24dp"></ImageView>

        <ImageView
            android:id="@+id/next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_skip_next_black_24dp"></ImageView>
    </LinearLayout>
</LinearLayout>